<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="KAIROS.Dialogs.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Settings"
    DefaultButton="Primary"
    PrimaryButtonText="Close"
    mc:Ignorable="d">

    <ScrollViewer MaxHeight="500">
        <StackPanel Padding="4" Spacing="24">
            <!--  Appearance Section  -->
            <StackPanel Spacing="12">
                <TextBlock
                    FontWeight="SemiBold"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="Appearance" />

                <StackPanel Spacing="8">
                    <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="Theme" />
                    <ComboBox
                        x:Name="ThemeComboBox"
                        HorizontalAlignment="Stretch"
                        SelectedIndex="0"
                        SelectionChanged="ThemeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Use System Setting" Tag="Default" />
                        <ComboBoxItem Content="Light" Tag="Light" />
                        <ComboBoxItem Content="Dark" Tag="Dark" />
                    </ComboBox>
                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="The theme will be applied immediately" />
                </StackPanel>
            </StackPanel>

            <!--  About Section  -->
            <StackPanel Spacing="12">
                <TextBlock
                    FontWeight="SemiBold"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="About" />

                <StackPanel Spacing="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <FontIcon
                            Margin="0,0,12,0"
                            FontSize="32"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            Glyph="&#xE946;" />
                        <StackPanel Grid.Column="1">
                            <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="KAIROS AI Chat Assistant" />
                            <TextBlock
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="Version 1.0.0" />
                        </StackPanel>
                    </Grid>

                    <TextBlock Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap">
                        A beautiful, privacy-focused AI chat assistant for Windows.
                        Run powerful LLM models 100% locally on your PC.
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!--  Storage Section  -->
            <StackPanel Spacing="12">
                <TextBlock
                    FontWeight="SemiBold"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="Storage" />

                <StackPanel Spacing="8">
                    <Button
                        x:Name="ManageModelsButton"
                        HorizontalAlignment="Stretch"
                        Click="ManageModels_Click"
                        Style="{StaticResource AccentButtonStyle}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE8F4;" />
                                <TextBlock Text="Manage Models" />
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <TextBlock
                        Margin="0,8,0,0"
                        Style="{StaticResource BodyStrongTextBlockStyle}"
                        Text="Data Location" />
                    <TextBlock
                        x:Name="DataLocationTextBlock"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        IsTextSelectionEnabled="True"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Margin="0,8,0,0"
                        Style="{StaticResource BodyStrongTextBlockStyle}"
                        Text="Models Location" />
                    <TextBlock
                        x:Name="ModelsLocationTextBlock"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        IsTextSelectionEnabled="True"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        TextWrapping="Wrap" />

                    <HyperlinkButton
                        x:Name="OpenDataFolderButton"
                        Margin="0,8,0,0"
                        Click="OpenDataFolder_Click"
                        Content="Open Data Folder" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
