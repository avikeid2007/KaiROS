<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="KAIROS.Dialogs.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Settings"
    PrimaryButtonText="Close"
    DefaultButton="Primary">

    <ScrollViewer MaxHeight="500">
        <StackPanel Spacing="24" Padding="4">
            <!-- Appearance Section -->
            <StackPanel Spacing="12">
                <TextBlock Text="Appearance" 
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           FontWeight="SemiBold"/>
                
                <StackPanel Spacing="8">
                    <TextBlock Text="Theme" 
                               Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <ComboBox x:Name="ThemeComboBox"
                              HorizontalAlignment="Stretch"
                              SelectedIndex="0"
                              SelectionChanged="ThemeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Use System Setting" Tag="Default"/>
                        <ComboBoxItem Content="Light" Tag="Light"/>
                        <ComboBoxItem Content="Dark" Tag="Dark"/>
                    </ComboBox>
                    <TextBlock Text="The theme will be applied immediately"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </StackPanel>

            <!-- About Section -->
            <StackPanel Spacing="12">
                <TextBlock Text="About" 
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           FontWeight="SemiBold"/>
                
                <StackPanel Spacing="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xE946;" 
                                  FontSize="32"
                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                  Margin="0,0,12,0"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="KAIROS AI Chat Assistant" 
                                       Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <TextBlock Text="Version 1.0.0" 
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Grid>
                    
                    <TextBlock TextWrapping="Wrap"
                               Style="{StaticResource CaptionTextBlockStyle}">
                        A beautiful, privacy-focused AI chat assistant for Windows. 
                        Run powerful LLM models 100% locally on your PC.
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Storage Section -->
            <StackPanel Spacing="12">
                <TextBlock Text="Storage" 
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           FontWeight="SemiBold"/>
                
                <StackPanel Spacing="8">
                    <Button x:Name="ManageModelsButton"
                            Content="Manage Downloaded Models"
                            Click="ManageModels_Click"
                            HorizontalAlignment="Stretch"
                            Style="{StaticResource AccentButtonStyle}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8F4;" FontSize="16"/>
                                <TextBlock Text="Manage Models"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    
                    <TextBlock Text="Data Location" 
                               Style="{StaticResource BodyStrongTextBlockStyle}"
                               Margin="0,8,0,0"/>
                    <TextBlock x:Name="DataLocationTextBlock"
                               TextWrapping="Wrap"
                               IsTextSelectionEnabled="True"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    
                    <TextBlock Text="Models Location" 
                               Style="{StaticResource BodyStrongTextBlockStyle}"
                               Margin="0,8,0,0"/>
                    <TextBlock x:Name="ModelsLocationTextBlock"
                               TextWrapping="Wrap"
                               IsTextSelectionEnabled="True"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    
                    <HyperlinkButton x:Name="OpenDataFolderButton"
                                     Content="Open Data Folder"
                                     Click="OpenDataFolder_Click"
                                     Margin="0,8,0,0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
