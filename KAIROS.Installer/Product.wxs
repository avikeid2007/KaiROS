    <!-- Registry entries component -->
    <ComponentGroup Id="RegistryEntries" Directory="INSTALLFOLDER">
      <Component Id="RegistryEntries" Guid="F1E2D3C4-B5A6-7890-CDEF-1234567890AB" Win64="$(var.Win64)">
        <RegistryValue Root="HKLM"
                       Key="Software\$(var.Manufacturer)\$(var.ProductName)"
                       Name="InstallPath"
                       Type="string"
                       Value="[INSTALLFOLDER]"
                       KeyPath="yes" />
      </Component>
    </ComponentGroup>
    
    <!-- NativeDLLComponents are now included via Heat harvesting -->
    <!-- The DLLs folder is automatically harvested and included in HarvestedFiles -->
    <!--
    <ComponentGroup Id="NativeDLLComponents" Directory="INSTALLFOLDER">
